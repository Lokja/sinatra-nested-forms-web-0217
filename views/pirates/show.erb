<body>
<h1>Yer Pirate, All Made Up My Hearty</h1>
  <div class="pirate">
    <h3>Name: <%= @pirate.name %></h3><br>
    <h4>Height: <%= @pirate.height %></h4>
    <h4>Weight: <%= @pirate.weight %></h4>
  </div><br>
<h2>What's a pirate without a ship!?</h2>
  <% @ships.each do |ship| %>
    <div class="ship">
      <p>Name: <%= ship.name %></p><br>
      <p>Type: <%= ship.type %></p><br>
      <p>Booty: <%= ship.booty %></p><br>
    </div><br>
  <% end %>
</body>
